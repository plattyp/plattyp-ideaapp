<div class="row">
	<div class="col-md-3">
		<%= render :partial => '/ideas/ideasidebar' %>
	</div>
	<div class="col-md-9">
		<div class="panel panel-default">
		  	<div class="panel-heading">
			Features
				<div class="pull-right">
					<p><%= link_to "Add Feature", new_idea_feature_path(@idea) %></p>
				</div>
			</div>
			<div class="panel-body">
				<%= render :partial => 'featurenav' %>
				<%= render :partial => 'editfeature' %>
			<br />
				<div class="row">
					<div class ="col-md-3">
						<%= render :partial => "/subfeatures/subfeaturecategories" %>
						<%= link_to "Manage Categories", idea_subfeaturecategories_path(:idea_id => @idea.id) %>
					</div>
					<div class="col-md-9">
						<div id="toggleList" style="display:block;">
							<%= render :partial => '/subfeatures/subfeaturelist' %>
						</div>
						<div id="toggleCreate" style="display:none;">
							<%= render :partial => '/subfeatures/newsubfeature' %>
						</div>
						<div class="addsubfeaturelink">
							<a href="javascript:toggle();" id="linkText" >Add a Subfeature</a>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>