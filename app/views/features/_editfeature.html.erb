<%= simple_form_for [@idea,@feature] do |feature| %>
	<%= feature.input :name %>
	<%= feature.input :description %>
	<div class="row">
		<div class="col-md-10">
			<%= feature.button :submit, :class => "btn btn-default" %>
			<div class="btn-group">
			  <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
			    <span class="glyphicon glyphicon-cog"></span>
			  </button>
			  <ul class="dropdown-menu" role="menu">
			    <li><%= link_to 'Delete this feature', [@idea, @feature], confirm: 'Are you sure you would like to delete this feature?', method: :delete %></li>
			    <li><a href="#">Another action</a></li>
			  </ul>
			</div>
		</div>
	</div>
<% end %>

