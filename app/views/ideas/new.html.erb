<h1>Create Idea</h1>

<div class="row">
	<div class="col-md-6">
		<%= simple_form_for (@idea) do |idea| %>
			<%= idea.input :name %>
			<%= idea.input :description %>
			<%= idea.select :ideatype_id, @ideatype_options %>
			<%= idea.button :submit, :class => 'btn-primary'%>
		<% end %>
	</div>
</div>
