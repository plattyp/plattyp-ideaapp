<div class="row">
	<%= render :partial => 'navigation' %>
	<div class="col-md-10">
		<h2>Edit Idea</h2>
		<%= simple_form_for(@idea) do |idea| %>
			<%= idea.input :name %>
			<%= idea.input :description %>
			<%= idea.input :ideatype_id, collection: @ideatype_options,:label => "Idea Type",include_blank: false, selected: @idea.ideatype_id  %>
			<%= idea.button :submit, :class => 'btn-primary' %>
		<% end %>
	</div>
</div>

