<div class="row">
	<div class="col-md-3">
		<div class="panel panel-default">
		  	<div class="panel-heading">
		  	Filters
		  	</div>
		  	<div class="panel-body">
		  		<h6>Idea Types</h6>
		  			<%= simple_form_for :idea do |i| %>
		  				<%= i.input :ideatypes, 
		  								 :collection => @ideatypes,
		  								 :label_method => :last,
		  								 :value_method => :first,
		  								 label: false,
		  								 :as => :check_boxes%>
		  				<%= i.button :submit, :value => "Filter", :class => 'btn-primary' %>
		  			<% end %>
		  	</div>
		</div>
	</div>
	<div class="col-md-9">
		<div class="panel panel-default">
		  	<div class="panel-heading">
		  	Ideas
			  <div class="dropdown pull-right">
			  	<a href="#" class="dropdown-toggle" data-toggle="dropdown">Filter<b class="caret"></b></a>
				  	<ul class="dropdown-menu" role="menu">
				  		<% @ideatypes.each do |i| %>
				  		<li><%= link_to "#{i[1]}", ideas_path(:ideatype_id => i[0]) %></li>
				  		<% end %>
				  	</ul>
			  </div>
			</div>
			<div class="panel-body">
				<% @ideas.each do |idea| %>
				<div class="panel panel-default">
				  	<div class="panel-heading">
				  	<%= idea.name %>
				  	<span class="label label-info"><%= idea.ideatype.name %></span>
				  		<div class="dropdown pull-right">
				  			<a href="#" class="dropdown-toggle" data-toggle="dropdown">Actions <b class="caret"></b></a>
				  				<ul class="dropdown-menu" role="menu">
				  				<li><%= link_to "Edit", edit_idea_path(idea) %></li>
				  				<li><%= link_to "Delete", idea_path(idea), :method => :delete, data: { confirm: 'Are you sure you want to delete this idea? (All data for this idea will be deleted as well)' } %></li>
				  		</div>
				  	</div>
				  	<div class="panel-body">
				  	<%= idea.description %>
				  	</div>
				  	<div class="panel-footer">
				  	Created by: <%= idea.createdbyuser.username %>
				  	</div>
				</div>
				<% end %>
			</div>
		</div>
		<p><%= link_to "Add an Idea", new_idea_path %></p>
	</div>
</div>
