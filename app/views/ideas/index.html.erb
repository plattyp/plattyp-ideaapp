<h1>Current Ideas</h1>

<div class="row">
	<div class="col-md-6">
		<table class="table table-hover">
			<tr>
				<th>Name</th>
				<th>Description</th>
				<th>Type</th>
				<th>Created By</th>
				<th></th>
				<th></th>
			</tr>
			<% @ideas.each do |idea| %>
			<tr>
				<td><%= idea.name %></td>
				<td><%= idea.description %></td>
				<td><%= idea.ideatype.name if idea.ideatype %></td>
				<% idea.users.each do |user| %>
					<td><%= user.username %></td>
				<% end %>
				<td><%= link_to "Edit", edit_idea_path(idea) %></td>
				<td><%= link_to "Delete", idea, data: { :confirm => "Are you sure you would like to delete this idea?" }, :method => :delete %></td>
			</tr>
			<% end %>
		</table><br />

		<p><%= link_to "Add an Idea", new_idea_path %></p>
	</div>
</div>
