<div class="row">
	<div class="col-md-6">
		<div class="panel panel-default">
		  	<div class="panel-heading">
		  	Ideas
			  <div class="dropdown pull-right">
			  	<a href="#" class="dropdown-toggle" data-toggle="dropdown">Filter<b class="caret"></b></a>
				  	<ul class="dropdown-menu" role="menu">
				  		<% @ideatypes.each do |i| %>
				  		<li><a href="#"><%= i[1] %></a></li>
				  		<% end %>
				  	</ul>
			  </div>
			</div>
			<div class="panel-body">
				<table class="table table-hover">
					<tr>
						<th>Name</th>
						<th>Description</th>
						<th>Type</th>
						<th>Created By</th>
						<th>Actions</th>
					</tr>
					<% @ideas.each do |idea| %>
					<tr>
						<td><%= idea.name %></td>
						<td><%= idea.description %></td>
						<td><%= idea.ideatype.name if idea.ideatype %></td>
						<td><%= idea.createdbyuser.username %></td>
						<td><%= link_to '<i class="glyphicon glyphicon-pencil"></i>'.html_safe, edit_idea_path(idea) %>
							 
							<%= link_to '<i class="glyphicon glyphicon-trash"></i>'.html_safe, idea_path(idea), :method => :delete, data: { confirm: 'Are you sure you want to delete this idea? (All data for this idea will be deleted as well)' } %>
						</td>
					</tr>
					<% end %>
				</table><br />
			</div>
		</div>
		<p><%= link_to "Add an Idea", new_idea_path %></p>
	</div>
</div>
