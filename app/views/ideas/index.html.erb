<div class="row">
	<div class="col-md-3">
		<div class="panel panel-default">
		  	<div class="panel-heading">
		  	Filters
		  	</div>
		  	<div class="panel-body">
		  		<h6>Idea Types</h6>
		  		<form class="filter_form", method="get">
				<% @ideatypelist.each do |a| %>
				    <%= check_box_tag("ideatype_ids[]", a[1], a[2]) %>
				    <%= a[0] %><br />
				<% end %><br />
    			<input type="submit" value="Apply Filter" class="btn btn-block btn-primary"/>
  				</form>
		  	</div>
		</div>
		<%= button_to "Add an Idea", new_idea_path, :class => 'btn btn-block btn-danger', :method => :get %>
		<br />
	</div>
	<div class="col-md-9">
		<div class="panel panel-default">
		  	<div class="panel-heading">
		  	Ideas
			  <div class="pull-right">
			  	<form class="filter_form", method="get">
			  	<input type="submit" value="F" class="btn btn-default btn-sm"/>
			  	</form>
			  </div>
			</div>
			<div class="panel-body">
				<% if @ideas.blank? === false %>
					<% @ideas.each do |idea| %>
					<div class="panel panel-default">
					  	<div class="panel-heading">
					  	<%= idea.name %>
					  	<span class="label label-info"><%= idea.ideatype.name %></span>
					  		<div class="dropdown pull-right">
					  			<a href="#" class="dropdown-toggle" data-toggle="dropdown">Actions <b class="caret"></b></a>
					  				<ul class="dropdown-menu" role="menu">
					  				<li><%= link_to "Edit", edit_idea_path(idea) %></li>
					  				<li><%= link_to "Delete", idea_path(idea), :method => :delete, data: { confirm: 'Are you sure you want to delete this idea? (All data for this idea will be deleted as well)' } %></li>
					  		</div>
					  	</div>
					  	<div class="panel-body">
					  	<%= idea.description %>
					  	</div>
					  	<div class="panel-footer">
					  	Created by: <%= idea.createdbyuser.username %>
					  	</div>
					</div>
					<% end %>
				<% else %>
					<p class="noideastext">You currently have no ideas created/shared</p>
				<% end %>
			</div>
		</div>
	</div>
</div>
