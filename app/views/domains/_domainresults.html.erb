<div class="domains-container">
	<table class="table table-striped">
		<tr>
			<th>Domain</th>
			<th>Status</th>
			<th>Expiration Date</th>
			<th>Actions</th>
		</tr>
		<tr>
			<td><%=@domainresults.url %></td>
			<td><span class="<%= IdeadomainsHelper.span_classname(@domainresults.domainstatus_id) %>"><%=@domainresults.domainstatus_id %></span></td>
			<td><%=@domainresults.expirationdate %></td>
			<td><%= link_to "Add to Watchlist", idea_domains_path(:name => @domainresults.name, :url => @domainresults.url, :domainstatus_id => @domainresults.domainstatus_id, :expirationdate => @domainresults.expirationdate), :method => :post %></td>
		</tr>
	</table>
</div>