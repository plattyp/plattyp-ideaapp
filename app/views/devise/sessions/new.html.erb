<h2>Sign in</h2>

<div class="row">
	<div class="col-md-6">
		<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
		  <div class="form-inputs">
		    <%= f.input :email, required: false, autofocus: true %>
		    <%= f.input :password, required: false %>
		    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
		  </div>

		  <div class="form-actions">
		    <%= f.button :submit, "Sign in" %>
		  </div>
		<% end %>
		<%= render "devise/shared/links" %>
	</div>
	<div class="col-md-6">
		<h2>Take ideas from creation to execution</h2>
		<div class="col-md-4">
			<%= image_tag("brainstorm3.png", :alt => "Brainstorm") %>
			<h3>Brainstorm</h3>
		</div>
		<div class="col-md-4">
			<%= image_tag("organize.png", :alt => "Organize") %>
			<h3>Organize</h3>
		</div>
		<div class="col-md-4">
			<%= image_tag("collaborate.png", :alt => "Collaborate") %>
			<h3>Collaborate</h3>
		</div>
	</div>
</div>
