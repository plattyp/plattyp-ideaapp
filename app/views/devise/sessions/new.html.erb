<h2>Sign in</h2>

<div class="row">
	<div class="col-md-6">
		<br />
		<% if devise_mapping.omniauthable? %>
		  <% resource_class.omniauth_providers.each do |provider| %>
		    <%= button_to(RegistrationsHelper.providertext(provider), omniauth_authorize_path(resource_name, provider), :class => 'btn btn-block btn-danger') %>
		  <% end %>
		<% end %>
		<div class="sign-in-disclaimer-text">
			<h4>or sign in manually</h4>
		</div>
		<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
		  <div class="form-inputs">
		    <%= f.input :email, required: false, autofocus: true %>
		    <%= f.input :password, required: false %>
		    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
		  </div>

		  <div class="form-actions">
		    <%= f.button :submit, "Sign in" %>
		  </div>
		<% end %>
		<%= render "devise/shared/links" %>
	</div>
	<div class="col-md-6">
		<%= render :partial => "devise/shared/sidecontent" %>
	</div>
</div>
