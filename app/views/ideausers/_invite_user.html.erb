<div class="modal-header">
  <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
    <h3 id="myModalLabel">Invite Users</h3>
</div>
<div class="modal-body">
  	<%= simple_form_for (@idea) do |f| %>
		<%= f.simple_fields_for :ideausers, @idea.add_users_form do |user| %>
			<%= user.input :user_id, collection: @users, :include_blank => false, :input_html => {:rel => 'autocomplete' } %>
			<%= user.input :idea_id, input_html: {value: @idea.id}, as: :hidden %>
		<% end %>
	<%= f.button :submit,'Invite User', :class => 'btn btn-primary'%>
	<% end %>
</div>
<div class="modal-footer">
  <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
</div>